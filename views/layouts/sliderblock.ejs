<!-- Fullwidth Slider -->
<div class="home-section fullwidth-slider-fade bg-dark" id="home">

    <% sliderInfo.forEach(function(info){ %>
    <!-- Slide Item -->
    <section class="home-section bg-scroll bg-dark-alfa-30" data-background='<%= info.image %>'>
        <div class="js-height-full container">

            <!-- Hero Content -->
            <div class="home-content">
                <div class="home-text">

                    <h2 class="hs-line-8 no-transp font-alt mb-50 mb-xs-30">
                        <%= info.h2Text %>
                    </h2>

                    <h1 class="hs-line-14 font-alt mb-50 mb-xs-30">
                        <%= info.h1Text %>
                    </h1>

                    <div>
                        <a href="pages-pricing-1.html" class="btn btn-mod btn-border-w btn-medium btn-round">Get
                            Pricing</a>
                    </div>

                </div>
            </div>
            <!-- End Hero Content -->

        </div>
    </section>
    <!-- End Slide Item -->
    <% }); %>

</div>
<!-- End Fullwidth Slider -->